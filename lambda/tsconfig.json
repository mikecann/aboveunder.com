{
  "compilerOptions": {
    "outDir": "../../functions",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "moduleResolution": "node",
    "rootDir": "src/lambda",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "__snapshots__/**",
    "*.test.ts"
  ]
}
